<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_auth">

    <ImageView
        android:id="@+id/pin_dot1_x"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="150dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pin_dot2_x"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/pin_dot2_x"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        app:layout_constraintLeft_toRightOf="@id/pin_dot1_x"
        app:layout_constraintRight_toLeftOf="@id/pin_dot3_x"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="5dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/pin_dot3_x"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        app:layout_constraintLeft_toRightOf="@id/pin_dot2_x"
        app:layout_constraintRight_toLeftOf="@id/pin_dot4_x"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="5dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/pin_dot4_x"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        app:layout_constraintLeft_toRightOf="@id/pin_dot3_x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="5dp"
        android:visibility="invisible" />
</merge>