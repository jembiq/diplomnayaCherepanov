<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_auth">

    <ImageView
        android:id="@+id/pin_dot1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="150dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pin_dot2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/radiobutton_off_background" />

    <ImageView
        android:id="@+id/pin_dot2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/radiobutton_off_background"
        app:layout_constraintLeft_toRightOf="@id/pin_dot1"
        app:layout_constraintRight_toLeftOf="@id/pin_dot3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="5dp" />

    <ImageView
        android:id="@+id/pin_dot3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/radiobutton_off_background"
        app:layout_constraintLeft_toRightOf="@id/pin_dot2"
        app:layout_constraintRight_toLeftOf="@id/pin_dot4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="5dp" />

    <ImageView
        android:id="@+id/pin_dot4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/radiobutton_off_background"
        app:layout_constraintLeft_toRightOf="@id/pin_dot3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="5dp" />
</merge>